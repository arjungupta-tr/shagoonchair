---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import homeData from '../data/homeData.json';
---

<Layout title={homeData.page.title} description={homeData.page.description}>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="container">
        <div class="hero-text">
          <h1 class="hero-title fade-in-up" set:html={homeData.hero.title}></h1>
          <p class="hero-description fade-in-up">
            {homeData.hero.description}
          </p>
          <div class="hero-buttons fade-in-up">
            {homeData.hero.buttons.map(button => (
              <a href={button.href} class={`btn btn-${button.type}`}>{button.text}</a>
            ))}
          </div>
        </div>
      </div>
    </div>
    <div class="hero-image">
      <div class="image-placeholder">
        <svg width={homeData.hero.image.width} height={homeData.hero.image.height} viewBox={homeData.hero.image.viewBox} fill="none">
          <Fragment set:html={homeData.hero.image.svg} />
        </svg>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section features">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>{homeData.features.title}</h2>
        <p>{homeData.features.subtitle}</p>
      </div>
      
      <div class="grid grid-3">
        {homeData.features.items.map(feature => (
          <div class="feature-card card">
            <div class="feature-icon">
              <svg width="48" height="48" fill="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={feature.icon} />
              </svg>
            </div>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Product Categories -->
  <section class="section section-alt categories">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>{homeData.categories.title}</h2>
        <p>{homeData.categories.subtitle}</p>
      </div>
      
      <div class="grid grid-2">
        {homeData.categories.items.map(category => (
          <div class="category-card card">
            <div class="category-image">
              <div class="image-placeholder">
                <svg width="100%" height={category.image.height} viewBox={category.image.viewBox} fill="none">
                  <Fragment set:html={category.image.svg} />
                </svg>
              </div>
            </div>
            <div class="category-content">
              <h3>{category.title}</h3>
              <p>{category.description}</p>
              <a href={category.href} class="btn btn-primary">{category.buttonText}</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section testimonials">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>{homeData.testimonials.title}</h2>
        <p>{homeData.testimonials.subtitle}</p>
      </div>
      
      <div class="grid grid-3">
        {homeData.testimonials.items.map(testimonial => (
          <div class="testimonial-card card">
            <div class="testimonial-content">
              <div class="rating">
                {'â˜…'.repeat(testimonial.rating)}
              </div>
              <p>"{testimonial.text}"</p>
              <div class="testimonial-author">
                <strong>{testimonial.author}</strong>
                <span>{testimonial.position}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Add spacing for fixed navbar */
  .hero {
    padding-top: 80px;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--background-color) 0%, var(--background-alt) 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    flex: 1;
    z-index: 2;
  }

  .hero-text {
    max-width: 600px;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--accent-color);
    position: relative;
  }

  .hero-description {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--text-light);
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image {
    position: absolute;
    right: -100px;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.1;
    z-index: 1;
  }

  /* Features Section */
  .features {
    background: white;
  }

  .feature-card {
    text-align: center;
    padding: 2rem;
  }

  .feature-icon {
    width: 80px;
    height: 80px;
    background: var(--accent-color);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  /* Categories Section */
  .category-card {
    overflow: hidden;
    transition: var(--transition);
  }

  .category-image {
    margin: -1.5rem -1.5rem 1.5rem -1.5rem;
    background: var(--background-alt);
  }

  .image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--background-alt);
    border-radius: var(--border-radius) var(--border-radius) 0 0;
  }

  .category-content h3 {
    margin-bottom: 1rem;
  }

  .category-content p {
    margin-bottom: 1.5rem;
  }

  /* Testimonials */
  .testimonial-card {
    text-align: center;
  }

  .rating {
    color: var(--accent-color);
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .testimonial-content p {
    font-style: italic;
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .testimonial-author strong {
    display: block;
    color: var(--primary-color);
    margin-bottom: 0.25rem;
  }

  .testimonial-author span {
    color: var(--text-light);
    font-size: 0.9rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding-top: 60px;
      min-height: 80vh;
    }

    .hero-image {
      display: none;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .btn {
      text-align: center;
    }
  }

  /* Animation delays for staggered effect */
  .fade-in-up:nth-child(1) { animation-delay: 0.1s; }
  .fade-in-up:nth-child(2) { animation-delay: 0.2s; }
  .fade-in-up:nth-child(3) { animation-delay: 0.3s; }
</style>
