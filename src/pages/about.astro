---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import aboutData from '../data/aboutData.json';
---

<Layout title={aboutData.page.title} description={aboutData.page.description}>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="about-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title fade-in-up">{aboutData.hero.title}</h1>
        <p class="hero-description fade-in-up">
          {aboutData.hero.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story -->
  <section class="section our-story">
    <div class="container">
      <div class="grid grid-2">
        <div class="story-content">
          <h2>{aboutData.story.title}</h2>
          {aboutData.story.content.map(paragraph => (
            <p>{paragraph}</p>
          ))}
        </div>
        <div class="story-image">
          <div class="image-placeholder">
            <svg width={aboutData.story.image.width} height={aboutData.story.image.height} viewBox={aboutData.story.image.viewBox} fill="none">
              <Fragment set:html={aboutData.story.image.svg} />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="section section-alt values">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>{aboutData.values.title}</h2>
        <p>{aboutData.values.subtitle}</p>
      </div>
      
      <div class="grid grid-3">
        {aboutData.values.items.map(value => (
          <div class="value-card card">
            <div class="value-icon">
              <svg width="48" height="48" fill="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={value.icon} />
              </svg>
            </div>
            <h3>{value.title}</h3>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="section team">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>{aboutData.team.title}</h2>
        <p>{aboutData.team.subtitle}</p>
      </div>
      
      <div class="grid grid-3">
        {aboutData.team.members.map(member => (
          <div class="team-member card">
            <div class="member-image">
              <div class="image-placeholder">
                <svg width={member.image.width} height={member.image.height} viewBox={member.image.viewBox} fill="none">
                  <Fragment set:html={member.image.svg} />
                </svg>
              </div>
            </div>
            <div class="member-info">
              <h3>{member.name}</h3>
              <h4>{member.position}</h4>
              <p>{member.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section section-alt process">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>{aboutData.process.title}</h2>
        <p>{aboutData.process.subtitle}</p>
      </div>
      
      <div class="process-steps">
        {aboutData.process.steps.map((step, index) => (
          <div class="process-step">
            <div class="step-number">{step.number}</div>
            <div class="step-content">
              <h3>{step.title}</h3>
              <p>{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Add spacing for fixed navbar */
  .about-hero {
    padding-top: 100px;
  }

  /* Hero Section */
  .about-hero {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    padding: 100px 0 4rem;
    text-align: center;
  }

  .hero-title {
    color: white;
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Our Story Section */
  .our-story {
    padding: 4rem 0;
  }

  .story-content h2 {
    margin-bottom: 1.5rem;
  }

  .story-content p {
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .story-image {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-placeholder {
    background: var(--background-alt);
    border-radius: var(--border-radius);
    padding: 2rem;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Values Section */
  .value-card {
    text-align: center;
    padding: 2rem;
  }

  .value-icon {
    width: 80px;
    height: 80px;
    background: var(--accent-color);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .value-card h3 {
    margin-bottom: 1rem;
  }

  /* Team Section */
  .team-member {
    text-align: center;
    overflow: hidden;
  }

  .member-image {
    margin: -1.5rem -1.5rem 1.5rem -1.5rem;
    background: var(--background-alt);
  }

  .member-info h3 {
    margin-bottom: 0.5rem;
  }

  .member-info h4 {
    color: var(--accent-color);
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1rem;
  }

  .member-info p {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  /* Process Section */
  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
  }

  .step-number {
    width: 50px;
    height: 50px;
    background: var(--accent-color);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .step-content h3 {
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .step-content p {
    margin: 0;
    color: var(--text-light);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta {
    background: var(--background-alt);
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-hero {
      padding: 80px 0 3rem;
    }

    .process-step {
      flex-direction: column;
      text-align: center;
    }

    .step-number {
      align-self: center;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .process-steps {
      gap: 1rem;
    }

    .process-step {
      padding: 1rem;
    }

    .step-number {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }
  }

  /* Animation delays */
  .fade-in-up:nth-child(1) { animation-delay: 0.1s; }
  .fade-in-up:nth-child(2) { animation-delay: 0.3s; }
</style>
