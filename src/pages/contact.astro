              <rect x="150" y="180" width="60" height="40" fill="#e5e7eb" rx="4"/>
              <rect x="520" y="170" width="90" height="60" fill="#e5e7eb" rx="4"/>
              <rect x="650" y="180" width="70" height="40" fill="#e5e7eb" rx="4"/>
              
              <!-- Buildings below main road -->
              <rect x="80" y="280" width="70" height="45" fill="#e5e7eb" rx="4"/>
              <rect x="250" y="275" width="85" height="55" fill="#e5e7eb" rx="4"/>
              <rect x="550" y="285" width="65" height="40" fill="#e5e7eb" rx="4"/>
              
              <!-- Parks/Green Areas -->
              <circle cx="150" cy="120" r="35" fill="#10b981" opacity="0.4"/>
              <circle cx="650" cy="380" r="40" fill="#10b981" opacity="0.4"/>
              <circle cx="300" cy="420" r="25" fill="#10b981" opacity="0.4"/>
              
              <!-- Mall (Design Center Mall) -->
              <rect x="460" y="120" width="120" height="80" fill="#fbbf24" rx="8" opacity="0.8"/>
              <text x="520" y="165" text-anchor="middle" fill="white" font-size="14" font-weight="bold">Design Center</text>
              <text x="520" y="180" text-anchor="middle" fill="white" font-size="12">Mall</text>
              
              <!-- City Art Gallery -->
              <rect x="460" y="300" width="120" height="60" fill="#8b5cf6" rx="8" opacity="0.8"/>
              <text x="520" y="335" text-anchor="middle" fill="white" font-size="14" font-weight="bold">City Art</text>
              <text x="520" y="350" text-anchor="middle" fill="white" font-size="12">Gallery</text>
              
              <!-- Metro Station -->
