              <path d="M0 200 L800 200" stroke="#d1d5db" stroke-width="3"/>
              <path d="M0 300 L800 300" stroke="#d1d5db" stroke-width="3"/>
              <path d="M0 400 L800 400" stroke="#d1d5db" stroke-width="3"/>
              <path d="M100 0 L100 500" stroke="#d1d5db" stroke-width="3"/>
              <path d="M300 0 L300 500" stroke="#d1d5db" stroke-width="3"/>
              <path d="M500 0 L500 500" stroke="#d1d5db" stroke-width="3"/>
              <path d="M700 0 L700 500" stroke="#d1d5db" stroke-width="3"/>
              
              <!-- Buildings and Structures -->
